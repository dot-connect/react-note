{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "types": ["reflect-metadata"],
    "target": "ES6",
    "sourceMap": true,
    "jsx": "react",
    "noImplicitAny": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "bin"
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": false,
    "emitRequireType": false
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
